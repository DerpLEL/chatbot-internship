{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "python",
      "dockerBuild": {
        "tag": "chatbotinternship:latest",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": [
        "docker-build"
      ],
      "dockerRun": {
        "env": {
          "FLASK_APP": "app.py"
        }
      },
      "python": {
        "args": [
          "run",
          "--no-debugger",
          "--no-reload",
          "--host",
          "0.0.0.0",
          "--port",
          "3978"
        ],
        "module": "flask"
      }
    },
    {
      "type": "cmake",
      "label": "CMake: build",
      "command": "build",
      "targets": [
        "[N/A - Select Kit]"
      ],
      "group": "build",
      "problemMatcher": [],
      "detail": "CMake template build task"
    }
  ]
}
